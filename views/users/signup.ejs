<% layout("./layouts/boilerplate") %>
<style>

.bg{
  background-color: rgb(103, 103, 103);
  height: 70vh;
  width: 90vw;
  background-image: url(/images/user1.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  background-blend-mode: overlay;
}

.topic{
 color: white;
 font-size: 18px;
 font-weight: 500;
}

.buttn {
padding: 10px 20px;
margin: 0 10px;
font-size: 18px;
cursor: pointer;
border: 1px solid white;
border-radius: 5px;
transition: 0.1s linear;
}

.form-control{
border: 1px solid black;
}

.btn-success {
background-color: transparent;
background-blend-mode: overlay;
color: rgb(255, 255, 255);
}

.buttn:hover {
opacity: 0.9;
scale: 1.05;
}

</style>

<div class="bg">
 <div class="row mt-3">
    <h1 class="col-6 offset-4 mb-4 mt-3">SignUp on GharSafar</h1>
    <div class="topic col-4 offset-4">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
              <input 
              name="username"
              id="username"
              type="text"
              class="form-control" 
              required
              />
              <div class="valid-feedback">
                Looks good!
              </div>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email Id</label>
              <input 
              name="email"
              id="email"
              type="email"
              class="form-control" 
              required
              />
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
              <input 
              name="password"
              id="password"
              type="password"
              class="form-control" 
              required
              />
              </div>
              <button class="buttn btn-success mb-3">SignUp</button>
        </form>
    </div>
 </div>   
</div>