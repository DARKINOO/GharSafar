<% layout("./layouts/boilerplate") %>

<style>
  .bg{
    background-color: rgb(103, 103, 103);
    height: 70vh;
    width: 90vw;
    background-image: url(/images/log.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    background-blend-mode: overlay;
    color: white;
  }
  
  .topic{
   color: white;
   font-size: 18px;
   font-weight: 500;
  }
  
  .buttn {
  padding: 10px 20px;
  margin: 0 10px;
  font-size: 18px;
  cursor: pointer;
  border: 1px solid white;
  border-radius: 5px;
  transition: 0.1s linear;
  }
  
  .form-control{
  border: 1px solid black;
  }
  
  .btn-success {
  background-color: transparent;
  background-blend-mode: overlay;
  color: rgb(255, 255, 255);
  }
  
  .buttn:hover {
  opacity: 0.9;
  scale: 1.05;
  }
  
</style>

<div class="bg">
 <div class="row mt-3">
    <h1 class="col-6 offset-3 mb-5 mt-4">Log In to GharSafar</h1>
    <div class="topic col-5 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
              <input 
              name="username"
              id="username"
              type="text"
              class="form-control" 
              required
              />
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
              <input 
              name="password"
              id="password"
              type="password"
              class="form-control" 
              required
              />
              </div>
              <button class="buttn btn-success mb-3">Log In</button>
        </form>
    </div>
 </div>    
</div>