<% layout("./layouts/boilerplate") %>

<style>
    .area {
        margin-top: 2vh;
        height: 75vh;
        width: 90vw;
        position: relative;
        overflow: hidden;
        box-shadow: 0px 0px 10px 10px rgba(223, 125, 125, 0.5);
    }
    .mainhead {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;  
        color: white;
        z-index: 10;
    }
    .welcome-text, .description, .buttons {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 1s ease-out, transform 1s ease-out;
    }
    .description {
        max-width: 60vw;
        margin: 20px auto;
        font-size: 18px;
        line-height: 1.6;
    }
    .buttons {
        margin-top: 20px;
    }
    .buttn {
        padding: 10px 20px;
        margin: 0 10px;
        font-size: 18px;
        cursor: pointer;
        border: 1px solid white;
        border-radius: 5px;
        transition: 0.1s linear;
    }
    .btn-explore {
        background-color: transparent;
        color: white;
    }
    .btn-login {
        background-color: transparent;
        color: white;
    }

    .buttn:hover {
        opacity: 0.9;
        scale: 1.05;
    }
    .slider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }
    .slider.active {
        opacity: 1;
    }
</style>

<div class="area">
    <div class="mainhead">
        <div class="welcome-text">
            <h1>Welcome to</h1>
            <h1>Gharसफ़र</h1>
        </div>
        <div class="description">
            <p>Embark on a journey of a lifetime with Gharसफ़र. Discover hidden gems, create unforgettable memories, and experience the world like never before. Your adventure starts here!</p>
        </div>
        <div class="buttons">
            <a href="/listings"><button class="buttn btn-explore">Explore</button></a>
            <a href="/login"><button class="buttn btn-login">Log in</button></a> 
        </div>
    </div>
    <div class="slider active" style="background: url(/images/bg1.jpg) no-repeat center center/cover;"></div>
    <div class="slider" style="background: url(/images/bg2.jpg) no-repeat center center/cover;"></div>
    <div class="slider" style="background: url(/images/bg4.jpg) no-repeat center center/cover;"></div>
</div>

<script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slider');
    
    function showSlide(index) {
        slides[currentSlide].classList.remove('active');
        slides[index].classList.add('active');
        currentSlide = index;
    }

    function nextSlide() {
        let next = (currentSlide + 1) % slides.length;
        showSlide(next);
    }

    setInterval(nextSlide, 3000); // Change slide every 5 seconds

    // Animations for text elements
    setTimeout(() => {
        document.querySelector('.welcome-text').style.opacity = '1';
        document.querySelector('.welcome-text').style.transform = 'translateY(0)';
    }, 1000);

    setTimeout(() => {
        document.querySelector('.description').style.opacity = '1';
        document.querySelector('.description').style.transform = 'translateY(0)';
    }, 3000);

    setTimeout(() => {
        document.querySelector('.buttons').style.opacity = '1';
        document.querySelector('.buttons').style.transform = 'translateY(0)';
    }, 6000);
</script>